<!-- Header minimale -->
<header class="mb-16">
  <h1 class="text-6xl font-light text-gray-800 mb-2"><%= config.title %></h1>
  <div class="w-20 h-0.5 bg-gray-800 mb-4"></div>
  <p class="text-gray-600 font-mono text-lg"><%= theme.index.header_subtitle %></p>
</header>

<!-- Lista post minimale -->
<div class="space-y-12">
  <% page.posts.each(function(post){ %>
    <article class="border-b border-gray-200 pb-8 last:border-b-0">
      <!-- Data -->
      <time class="text-sm text-gray-500 font-mono"><%= date(post.date, 'YYYY-MM-DD') %></time>
      
      <!-- Titolo -->
      <h2 class="text-2xl font-light text-gray-900 mt-2 mb-3">
        <a href="<%= url_for(post.path) %>" class="hover:text-gray-600 transition-colors"><%= post.title %></a>
      </h2>
      
      <!-- Excerpt -->
      <p class="text-gray-600 leading-relaxed mb-4">
        <%= post.excerpt || post.description || strip_html(post.content).substring(0, 180) + '...' %>
      </p>
      
      <!-- Read more link -->
      <a href="<%= url_for(post.path) %>" class="text-gray-800 font-mono text-sm hover:underline">
        read more →
      </a>
    </article>
  <% }) %>
</div>

<!-- Pagination minimale -->
<% if (page.total > 1) { %>
  <nav class="mt-16 pt-8 border-t border-gray-200 text-center">
    <div class="space-x-4 font-mono">
      <% if (page.prev) { %>
        <a href="<%= url_for(page.prev_link) %>" class="text-gray-800 hover:underline">← precedente</a>
      <% } %>
      <% if (page.next) { %>
        <a href="<%= url_for(page.next_link) %>" class="text-gray-800 hover:underline">successivo →</a>
      <% } %>
    </div>
  </nav>
<% } %>