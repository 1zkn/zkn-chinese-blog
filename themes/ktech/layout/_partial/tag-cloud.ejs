<% if (theme.tag_cloud.enabled){ %>
<div class="p-4 border-t border-slate-100">
    <h3 class="font-semibold text-sm uppercase text-slate-400 mb-4">
        <i class="fas fa-tags mr-2 text-orange-400"></i><%= theme.tag_cloud.title || '标签云' %>
    </h3>
    <div class="flex flex-wrap gap-2">
        <% if (theme.tag_cloud && theme.tag_cloud.tags) { %>
            <% theme.tag_cloud.tags.forEach(function(tag) { %>
                <span class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-<%= theme.tag_cloud.hover_bg || 'orange-100' %> hover:text-<%= theme.tag_cloud.hover_text || 'orange-600' %>"><%= tag.name %></span>
            <% }); %>
        <% } %>
    </div>
</div>
<% } %>