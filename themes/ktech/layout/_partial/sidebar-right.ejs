<!-- 右侧边栏 -->
<aside
    class="w-64 bg-white shadow-md fixed top-0 right-0 h-full z-40 transition-transform duration-300 transform lg:translate-x-0 overflow-y-auto"
    :class="rightSidebar ? 'translate-x-0' : 'translate-x-full'">

    <!-- 博主信息 -->
    <div class="p-6 border-b border-slate-100">
        <div class="flex flex-col items-center">
            <div
                class="w-24 h-24 rounded-full bg-orange-100 flex items-center justify-center text-orange-500 text-3xl font-bold mb-4">
                1zkn
            </div>
            <h3 class="font-semibold text-slate-800">1zkn</h3>
            <p class="text-sm text-slate-500 mt-1">技术爱好者</p>

            <!-- 社交链接 -->
            <div class="flex gap-3 mt-4">
                <% if (theme.social.github) { %>
                    <a href="<%= theme.social.github %>" class="text-slate-400 hover:text-blue-500">
                      <i class="fab fa-github fa-lg"></i>
                    </a>
                  <% } %>
                  <% if (theme.social.twitter) { %>
                    <a href="<%= theme.social.twitter %>" class="text-slate-400 hover:text-blue-500">
                      <i class="fab fa-twitter fa-lg"></i>
                    </a>
                  <% } %>
                  <% if (theme.social.email) { %>
                    <a href="<%= theme.social.email %>" class="text-slate-400 hover:text-blue-500">
                        <i class="fa-solid fa-envelope"></i>
                    </a>
                  <% } %>
            </div>
        </div>
    </div>

    <div class="p-4 border-t border-slate-100">
        <h3 class="font-semibold text-sm uppercase text-slate-400 mb-4">
            <i class="fas fa-search mr-2 text-orange-400"></i>站内搜索
        </h3>
        <form action="/search/" method="get" class="relative">
            <input type="text" name="q" placeholder="输入关键词..." class="w-full py-2 px-3 pr-10 rounded border border-slate-200 focus:outline-none focus:border-orange-400 text-sm">
            <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-orange-500">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    <!-- 标签云 -->
    <div class="p-4 border-t border-slate-100">
        <h3 class="font-semibold text-sm uppercase text-slate-400 mb-4">
            <i class="fas fa-tags mr-2 text-orange-400"></i>标签云
        </h3>
        <div class="flex flex-wrap gap-2">
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">Hexo</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">博客</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">前端</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">JavaScript</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">CSS</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">Linux</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">服务器</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">Nginx</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">静态站点</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">Python</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">Docker</a>
            <a href="#"
                class="text-xs px-2 py-1 bg-slate-100 text-slate-600 rounded hover:bg-orange-100 hover:text-orange-600">教程</a>
        </div>
    </div>

    <div class="p-4 border-t border-slate-100">
        <h3 class="font-semibold text-sm uppercase text-slate-400 mb-4">
            <i class="fas fa-newspaper mr-2 text-orange-400"></i>最新文章
        </h3>
        <div class="space-y-3">
            <% site.posts.sort('date', -1).limit(5).each(function(post){ %>
                <a href="<%= url_for(post.path) %>" class="block hover:bg-orange-50 p-2 rounded">
                    <h4 class="text-sm font-medium text-slate-700 hover:text-orange-500 line-clamp-1"><%= post.title %></h4>
                    <time class="text-xs text-slate-500 mt-1"><%= date(post.date, 'YYYY-MM-DD') %></time>
                </a>
            <% }) %>
        </div>
    </div>
    
    <div class="p-4 border-t border-slate-100 lg:hidden">
        <button @click="rightSidebar = false"
            class="w-full p-2 text-sm text-center bg-slate-100 text-slate-600 rounded hover:bg-slate-200">
            <i class="fas fa-times mr-2"></i>关闭侧边栏
        </button>
    </div>
</aside>