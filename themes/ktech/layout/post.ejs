<!-- Link home in alto a sinistra -->
<div class="w-full max-w-3xl mx-auto">
  <div class="mb-8">
    <a href="<%= url_for('/') %>" class="group inline-flex items-center text-gray-400 hover:text-gray-800 transition-colors">
      <span class="group-hover:-translate-x-1 transition-transform duration-200">←</span>
      <span class="ml-2 font-mono text-sm">return</span>
    </a>
  </div>
  
  <!-- Contenuto dell'articolo con padding ottimizzato per mobile -->
  <article class="font-inconsolata p-3 md:p-8">
    <header>
      <h1 class="text-2xl font-semibold text-slate-900 break-words overflow-wrap-anywhere"><%= page.title %></h1>
      <% if (page.date || page.idea_date) { %>
        <div class="flex items-center gap-2">
          <% if (page.idea_date) { %>
            <span id="ideal-date">想法日期: <%= date(page.idea_date, 'YYYY-MM-DD') %></span>
            <span class="border-l-2 border-slate-300 h-4"></span>
          <% } %>
          <% if (page.date) { %>
            <span id="date">发布日期: <%= date(page.date, 'YYYY-MM-DD') %></span>
          <% } %>
        </div>
      <% } %>
    </header>
  
    <!-- 文章内容 con gestione ottimizzata dell'overflow -->
    <div id="article-content" class="mt-8 prose prose-slate
        prose-blockquote:border-orange-500 
        prose-blockquote:bg-orange-50 
        prose-blockquote:text-slate-700 
        prose-blockquote:not-italic 
        prose-blockquote:py-2 
        prose-blockquote:px-4 
        prose-blockquote:rounded-r
        max-w-none break-words overflow-wrap-anywhere">
      <div class="[&_img]:max-w-full [&_img]:h-auto [&_pre]:overflow-x-auto [&_pre]:max-w-full [&_table]:overflow-x-auto [&_table]:block [&_table]:max-w-full sm:[&_table]:inline-table [&_table]:whitespace-nowrap sm:[&_table]:whitespace-normal [&_p]:break-words [&_p]:overflow-wrap-anywhere [&_h2]:break-words [&_h2]:overflow-wrap-anywhere [&_h3]:break-words [&_h3]:overflow-wrap-anywhere [&_a]:break-words [&_a]:overflow-wrap-anywhere [&_code]:whitespace-pre-wrap [&_code]:break-words">
        <%- page.content %>
      </div>
    </div>
  </article>
</div>

<%- include('_partial/disqus') %>